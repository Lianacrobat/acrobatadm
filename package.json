{
  "name": "p02",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:static": "astro build --output static",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/global.css -o ./dist/assets/css/global.css --minify",
    "build:full": "npm run build && npm run build:css",
    "build:github": "npm run build:static && npm run build:css",
    "preview": "astro preview",
    "astro": "astro",
    "generate-products": "node scripts/generate-products.js",
    "convert-json": "node scripts/convert-json-to-ts.js",
    "validate-products": "node scripts/validate-products.js",
    "sync-products": "node scripts/sync-dashboard-products.js",
    "update-products": "npm run generate-products && npm run convert-json",
    "build:styles": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css --watch"
  },
  "dependencies": {
    "@astrojs/node": "^9.3.0",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.8",
    "astro": "^5.9.2",
    "astro-swiper": "^1.0.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss-animated": "^2.0.0"
  }
}
