---
import HeroSection from "../../ui/HeroSection.astro";
import ProductosDestacados from "./ProductosDestacados.astro";
import ResumenProductos from "./ResumenProductos.astro";
import Slider from "./Slider.astro";
import Testimonios from "@components/clientes-testimonios/Carousel.astro";
---

<!-- Hero Section -->
<section>
	<HeroSection
		colorHero="bg-gradient-to-r from-rose-400 via-fuchsia-500 to-indigo-500"
		heroTitle="Catálogo 2025"
		heroParagraph="Productos, servicios, herramientas y más!"
		heroImage="catalogo"
	/>
</section>

<!-- Resumen Productos -->
<div class="pt-4">
	<ResumenProductos />
</div>

<!-- Clientes y Testimonios - Layout de dos columnas en escritorio -->
<div class="pt-4 flex flex-col lg:flex-row gap-4">
	<!-- Columna izquierda: Testimonios (70% en escritorio) -->
	<div class="w-full lg:w-[75%]">
		<Testimonios />
	</div>

	<!-- Columna derecha: Clientes (30% en escritorio) -->
	<div class="w-full lg:w-[25%]">
		<Slider />
	</div>
</div>

<!-- Productos Destacados -->
<div class="pt-4">
	<ProductosDestacados />
</div>
