---
interface Props {
	href: string;
	text: string;
	nameIcon: string;
	isActive?: boolean;
	activeBgClass?: string;
}

const {
	href,
	text,
	nameIcon,
	isActive = false,
	activeBgClass = "bg-sky-500",
} = Astro.props;

import Tooltip from "../ui/Tooltip.astro";
---

<a
	href={href}
	class={`flex items-center justify-center sm:justify-start gap-4 p-2.5 transition-colors duration-150 rounded-xl ${isActive ? `text-white ${activeBgClass}` : "text-[var(--text-color-soft)] hover:text-[var(--text-color)] hover:bg-[var(--cajas)] rounded-xl"}`}
>
	<div class="relative group">
		<svg
			class="w-6 h-6"
			aria-hidden="true"
		>
			<use href={`${import.meta.env.BASE_URL}icons/sprite.svg#${nameIcon}`}></use>
		</svg>
		<span class="sm:hidden">
			<Tooltip
				text={text}
				position="right"
			/>
		</span>
	</div>
	<span class="hidden sm:inline text-sm font-medium">{text}</span>
</a>
