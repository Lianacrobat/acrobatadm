---
// Tooltip simple y funcional
interface Props {
	text: string;
	position?: 'right' | 'left' | 'top' | 'bottom';
	maxWidth?: string;
	disabled?: boolean;
}

const { 
	text, 
	position = 'right', 
	maxWidth = '200px',
	disabled = false
} = Astro.props;

// Clases de posicionamiento simples
const positionClasses = {
	right: 'left-full top-1/2 -translate-y-1/2 ml-2',
	left: 'right-full top-1/2 -translate-y-1/2 mr-2',
	top: 'left-1/2 -translate-x-1/2 bottom-full mb-2',
	bottom: 'left-1/2 -translate-x-1/2 top-full mt-2'
};
---

<!-- Tooltip simple y funcional -->
{!disabled && (
	<span
		role="tooltip"
		class={`absolute ${positionClasses[position]} px-3 py-2 text-xs font-medium text-white bg-black rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-[9999]`}
		style={`max-width: ${maxWidth};`}
	>
		{text}
		<!-- Flecha simple -->
		<div 
			class={`absolute w-2 h-2 bg-black transform rotate-45 ${
				position === 'right' ? 'right-full top-1/2 -translate-y-1/2 -mr-1' :
				position === 'left' ? 'left-full top-1/2 -translate-y-1/2 -ml-1' :
				position === 'top' ? 'top-full left-1/2 -translate-x-1/2 -mt-1' :
				'bottom-full left-1/2 -translate-x-1/2 -mb-1'
			}`}
		></div>
	</span>
)}
