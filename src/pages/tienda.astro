---
import LayoutSEO from "../layouts/LayoutSEO.astro";
import HeroSection from "../components/ui/HeroSection.astro";
import ProductsFather from "../components/tienda/productos/ProductsFather.astro";

const seoData = {
	title: "Tienda Online - Equipos Acrobáticos Profesionales | Acrobata Demente",
	description: "Compra equipos acrobáticos profesionales: trampolines, colchonetas, arneses, bandas elásticas, pisos de resorte y más. Envío nacional, garantía y soporte técnico.",
	keywords: "tienda acrobática, equipos gimnasia, trampolines venta, colchonetas profesionales, arneses acrobáticos, bandas elásticas, pisos resorte, aparatos gimnasia, equipos deportivos, accesorios acrobáticos",
	author: "Acrobata Demente",
	robots: "index, follow",
	canonicalURL: "https://acrobatademente.com/tienda",
	openGraph: {
		title: "Tienda Online - Equipos Acrobáticos Profesionales",
		description: "Descubre nuestra tienda online con equipos acrobáticos de alta calidad. Trampolines, colchonetas, arneses y más para profesionales y principiantes.",
		image: "/assets/cover/tienda-og.jpg",
		url: "https://acrobatademente.com/tienda",
		type: "website",
		locale: "es_ES",
		site_name: "Acrobata Demente"
	},
	twitterCard: {
		card: "summary_large_image",
		title: "Tienda Online - Equipos Acrobáticos Profesionales",
		description: "Compra equipos acrobáticos profesionales con envío nacional y garantía. Trampolines, colchonetas, arneses y más.",
		image: "/assets/cover/tienda-twitter.jpg",
		site: "@AcrobataDemente"
	},
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Store",
		name: "Tienda Acrobata Demente",
		description: "Tienda online especializada en equipos acrobáticos y de gimnasia profesional",
		url: "https://acrobatademente.com/tienda",
		image: "/assets/cover/tienda-schema.jpg",
		priceRange: "$50 - $5000",
		paymentAccepted: ["Credit Card", "Debit Card", "Bank Transfer", "PayPal"],
		currenciesAccepted: "USD",
		address: {
			"@type": "PostalAddress",
			addressCountry: "CO",
			addressLocality: "Bogotá"
		},
		contactPoint: {
			"@type": "ContactPoint",
			telephone: "+57-300-123-4567",
			contactType: "customer service",
			availableLanguage: "Spanish"
		},
		openingHours: "Mo-Fr 09:00-18:00",
		hasOfferCatalog: {
			"@type": "OfferCatalog",
			name: "Catálogo de Equipos Acrobáticos",
			itemListElement: [
				{
					"@type": "Offer",
					itemOffered: {
						"@type": "Product",
						name: "Trampolines Profesionales",
						category: "Equipos Acrobáticos"
					}
				},
				{
					"@type": "Offer",
					itemOffered: {
						"@type": "Product",
						name: "Colchonetas y Mats",
						category: "Equipos de Seguridad"
					}
				},
				{
					"@type": "Offer",
					itemOffered: {
						"@type": "Product",
						name: "Arneses y Equipos de Seguridad",
						category: "Equipos de Protección"
					}
				}
			]
		},
		organization: {
			"@type": "Organization",
			name: "Acrobata Demente",
			url: "https://acrobatademente.com",
			logo: "/assets/favicon.png",
			sameAs: [
				"https://instagram.com/acrobatademente",
				"https://facebook.com/acrobatademente",
				"https://youtube.com/acrobatademente"
			]
		},
		breadcrumb: {
			"@type": "BreadcrumbList",
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					name: "Inicio",
					item: "https://acrobatademente.com"
				},
				{
					"@type": "ListItem",
					position: 2,
					name: "Tienda",
					item: "https://acrobatademente.com/tienda"
				}
			]
		}
	},
	additionalMetaTags: [
		{ name: "theme-color", content: "#8b5cf6" },
		{ name: "mobile-web-app-capable", content: "yes" },
		{ name: "apple-mobile-web-app-capable", content: "yes" },
		{ name: "apple-mobile-web-app-status-bar-style", content: "default" },
		{ name: "format-detection", content: "telephone=no" },
		{ name: "msapplication-TileColor", content: "#8b5cf6" },
		{ name: "application-name", content: "Acrobata Demente" },
		{ name: "apple-mobile-web-app-title", content: "Tienda Acrobática" },
		{ name: "msapplication-tooltip", content: "Tienda de equipos acrobáticos profesionales" },
