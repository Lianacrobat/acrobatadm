---
// Página de prueba simple
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Test Simple</title>
</head>
<body>
    <h1>✅ Servidor funcionando correctamente</h1>
    <p>Puerto: 4323</p>
    <p>Hora: {new Date().toLocaleString()}</p>
    
    <script>
        console.log('✅ JavaScript funcionando');
        
        // Test de API
        fetch('/api/telegram')
            .then(response => response.json())
            .then(data => {
                console.log('API Response:', data);
                document.body.innerHTML += `<div style="margin-top: 20px; padding: 10px; background: #f0f0f0;">API Test: ${JSON.stringify(data, null, 2)}</div>`;
            })
            .catch(error => {
                console.error('API Error:', error);
                document.body.innerHTML += `<div style="margin-top: 20px; padding: 10px; background: #ffcccc;">API Error: ${error.message}</div>`;
            });
    </script>
</body>
</html>