---
import Mantenimiento from "../components/ui/mantenimiento.astro";
import LayoutSEO from "../layouts/LayoutSEO.astro";
import HeroSection from "../components/ui/HeroSection.astro";

const seoData = {
	title: "Entrenamiento Deportivo - ADM | Rutinas y Programas de Fitness",
	description: "Descubre rutinas de entrenamiento profesionales, programas de fitness personalizados y técnicas avanzadas para mejorar tu rendimiento deportivo y condición física.",
	keywords: "entrenamiento deportivo, rutinas fitness, programas entrenamiento, ejercicios deportivos, acondicionamiento físico, entrenamiento funcional, fitness profesional",
	author: "ADM - Academia de Movimiento",
	robots: "index, follow",
	canonicalURL: Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.pathname,
	// Open Graph
	ogTitle: "Entrenamiento Deportivo - ADM | Rutinas y Programas de Fitness",
	ogDescription: "Descubre rutinas de entrenamiento profesionales, programas de fitness personalizados y técnicas avanzadas para mejorar tu rendimiento deportivo.",
	ogImage: "/assets/images/entrenamiento-og.jpg",
	ogType: "website",
	// Twitter Cards
	twitterCard: "summary_large_image",
	twitterTitle: "Entrenamiento Deportivo - ADM | Rutinas y Programas de Fitness",
	twitterDescription: "Descubre rutinas de entrenamiento profesionales, programas de fitness personalizados y técnicas avanzadas.",
	twitterImage: "/assets/images/entrenamiento-twitter.jpg",
	// Structured Data
	structuredData: {
		"@context": "https://schema.org",
		"@type": "WebPage",
		"name": "Entrenamiento Deportivo - ADM",
		"description": "Descubre rutinas de entrenamiento profesionales, programas de fitness personalizados y técnicas avanzadas para mejorar tu rendimiento deportivo y condición física.",
		"url": Astro.url.href,
		"mainEntity": {
			"@type": "Article",
			"headline": "Entrenamiento Deportivo y Rutinas de Fitness",
			"description": "Guía completa de entrenamiento deportivo, rutinas de fitness y programas de acondicionamiento físico para atletas y deportistas.",
			"author": {
				"@type": "Organization",
				"name": "ADM - Academia de Movimiento"
			},
			"publisher": {
				"@type": "Organization",
				"name": "ADM - Academia de Movimiento"
			}
		},
		"audience": {
			"@type": "Audience",
			"audienceType": "Athletes, Fitness Enthusiasts, Sports Professionals"
		},
		"breadcrumb": {
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Inicio",
					"item": Astro.site
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "Entrenamiento",
					"item": Astro.url.href
				}
			]
		}
	},
	// Additional meta tags
	additionalMetaTags: [
		{ name: "theme-color", content: "#15803d" },
		{ name: "apple-mobile-web-app-capable", content: "yes" },
		{ name: "apple-mobile-web-app-status-bar-style", content: "default" },
		{ name: "format-detection", content: "telephone=no" },
		{ name: "category", content: "Sports & Fitness" },
		{ name: "coverage", content: "Worldwide" },
		{ name: "distribution", content: "Global" },
		{ name: "rating", content: "General" },
		{ name: "revisit-after", content: "7 days" },
		{ name: "target", content: "all" },
		{ name: "HandheldFriendly", content: "True" },
		{ name: "MobileOptimized", content: "320" },
		{ name: "apple-mobile-web-app-title", content: "ADM Entrenamiento" }
	]
};
---

<LayoutSEO 
	title={seoData.title}
	description={seoData.description}
	keywords={seoData.keywords}
	author={seoData.author}
	robots={seoData.robots}
	canonical={seoData.canonicalURL}
	og={{
		title: seoData.ogTitle,
		description: seoData.ogDescription,
		image: seoData.ogImage,
		type: seoData.ogType
	}}
	twitter={{
		card: seoData.twitterCard,
		title: seoData.twitterTitle,
		description: seoData.twitterDescription,
		image: seoData.twitterImage
	}}
	structuredData={seoData.structuredData}
	additionalMeta={seoData.additionalMetaTags}
>
	<!-- Hero Section -->
	<section>
		<HeroSection
			colorHero="bg-gradient-to-r from-lime-600 to-green-800"
			heroTitle="Entrenamiento"
			heroParagraph="Entrenamiento, rutinas, y mas!"
			heroImage="catalogo"
		/>
	</section>

	<section>
		<Mantenimiento />
	</section>
</LayoutSEO>
