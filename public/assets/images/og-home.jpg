<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f172a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#334155;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Decorative elements -->
  <circle cx="100" cy="100" r="50" fill="#0ea5e9" opacity="0.1"/>
  <circle cx="1100" cy="530" r="80" fill="#8b5cf6" opacity="0.1"/>
  <rect x="900" y="50" width="200" height="4" fill="url(#accentGradient)" opacity="0.6"/>
  
  <!-- Logo placeholder -->
  <circle cx="150" cy="315" r="60" fill="url(#accentGradient)"/>
  <text x="150" y="325" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">ADM</text>
  
  <!-- Main content -->
  <text x="280" y="280" fill="white" font-family="Arial, sans-serif" font-size="48" font-weight="bold">
    ACROBATA DEMENTE
  </text>
  <text x="280" y="330" fill="#94a3b8" font-family="Arial, sans-serif" font-size="32" font-weight="600">
    Equipos Profesionales de Acrobacia
  </text>
  <text x="280" y="380" fill="#cbd5e1" font-family="Arial, sans-serif" font-size="24">
    Trampolines • XPE • Spring Floors • Arneses
  </text>
  <text x="280" y="420" fill="#e2e8f0" font-family="Arial, sans-serif" font-size="20">
    Calidad premium para atletas y gimnasios profesionales
  </text>
  
  <!-- Call to action -->
  <rect x="280" y="460" width="200" height="50" rx="25" fill="url(#accentGradient)"/>
  <text x="380" y="490" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="18" font-weight="600">
    Ver Catálogo
  </text>
  
  <!-- Equipment icons -->
  <g transform="translate(800, 200)">
    <!-- Trampoline icon -->
    <rect x="0" y="80" width="120" height="8" rx="4" fill="#0ea5e9" opacity="0.8"/>
    <rect x="10" y="70" width="100" height="4" rx="2" fill="#3b82f6" opacity="0.6"/>
    <circle cx="20" cy="88" r="3" fill="white"/>
    <circle cx="100" cy="88" r="3" fill="white"/>
    
    <!-- XPE foam icon -->
    <rect x="0" y="120" width="120" height="20" rx="10" fill="#8b5cf6" opacity="0.8"/>
    <rect x="0" y="150" width="120" height="20" rx="10" fill="#a855f7" opacity="0.6"/>
    <rect x="0" y="180" width="120" height="20" rx="10" fill="#c084fc" opacity="0.4"/>
  </g>
  
  <!-- Website URL -->
  <text x="280" y="580" fill="#64748b" font-family="Arial, sans-serif" font-size="16">
    acrobatademente.com
  </text>
</svg>