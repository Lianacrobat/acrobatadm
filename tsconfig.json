{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "@images/*": ["./src/assets/images/*"],
      "@types/*": ["./src/types/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@data/*": ["./src/data/*"],
      "@/pages/*": ["./src/pages/*"],
    }
  }
}